<h2>プロフィール</h2><br>
<%= form_with(model:@mylife,local:true) do |f| %>
    
    <div class="field">
    <%= f.label :name, 'プロフィール' %>
    <%= f.text_field :profile, :size => 140 %>
    </div>
    
    
    <h2>家族</h2><br>
    <div class="field">
    <%= f.label :body %>
    <%= f.text_field :family, :size => 140 %>
    </div>
  
    <h2>人生</h2><br>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_field :life, :size => 140 %>
    </div>
  
    <h2>死ぬまでにやりたいこと</h2><br>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_field :todo, :size => 140 %>
    </div>
  
    <h2>思い出</h2><br>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_field :memories, :size => 140 %>
    </div>

    <h2>ギャラリー</h2><br>
    <div class="field">
      <%= f.label :body %>
      <%= f.file_field :gallery, :size => 140 %>
    </div>

    
    <%= f.submit "投稿する" %>
  <% end %>

